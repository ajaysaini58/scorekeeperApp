<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="@color/reset_button_default_color" />

            <solid android:color="@color/reset_button_default_color" />

            <corners android:radius="360dp" />

            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />

        </shape>

    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="@color/reset_button_pressed_color" />

            <solid android:color="@color/reset_button_pressed_color" />

            <corners android:radius="3600dp" />

            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />

        </shape>

    </item>
</selector>
 